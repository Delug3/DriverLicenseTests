<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_view_quiz_level_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="24dp"
        android:text="Level"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_view_quiz_question"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="When parking uphill on a roadway that has a curb, turn the front wheels:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_quiz_level_name" />

    <TextView
        android:id="@+id/text_view_quiz_answer_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="Any direction, but set the parking break.asfdasfsafsfsfsfsfsfsfasfasf435345345345345345"
        app:layout_constraintBottom_toBottomOf="@+id/image_view_quiz_number_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_view_quiz_number_1"
        app:layout_constraintTop_toTopOf="@+id/image_view_quiz_number_1" />

    <TextView
        android:id="@+id/text_view_quiz_answer_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="Any direction, but set the parking break.asfdasfsafsfsfsfsfsfsfasfasf435345345345345345"
        app:layout_constraintBottom_toBottomOf="@+id/image_view_quiz_number_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/image_view_quiz_number_2"
        app:layout_constraintTop_toTopOf="@+id/image_view_quiz_number_2" />

    <TextView
        android:id="@+id/text_view_quiz_answer_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="Any direction, but set the parking break.asfdasfsafsfsfsfsfsfsfasfasf435345345345345345"
        app:layout_constraintBottom_toBottomOf="@+id/image_view_quiz_number_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_view_quiz_number_3"
        app:layout_constraintTop_toTopOf="@+id/image_view_quiz_number_3" />

    <TextView
        android:id="@+id/text_view_quiz_answer_4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="Any direction, but set the parking break.asfdasfsafsfsfsfsfsfsfasfasf435345345345345345"
        app:layout_constraintBottom_toBottomOf="@+id/image_view_quiz_number_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_view_quiz_number_4"
        app:layout_constraintTop_toTopOf="@+id/image_view_quiz_number_4" />

    <ImageView
        android:id="@+id/image_view_quiz_number_1"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_quiz_question"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/image_view_quiz_number_2"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_view_quiz_number_1"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/image_view_quiz_number_3"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_view_quiz_number_2"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/image_view_quiz_number_4"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_view_quiz_number_3"
        tools:srcCompat="@tools:sample/avatars" />
</androidx.constraintlayout.widget.ConstraintLayout>